<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhyan.hanshiqianni">
    <!-- Required  一些系统要求的权限，如访问网络等-->

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".application.MyApplication"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".main.MainActivity"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".productdetail.ProductDetailActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            />
        <activity
            android:name=".ordermanage.OrderManageActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            />
        <activity
            android:name=".minefragment.setting.MineSettingActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            />
        <activity
            android:name=".minefragment.setting.myaddress.MineSettingMyAddressActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            />
    </application>

</manifest>